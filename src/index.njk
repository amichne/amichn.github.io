    </section>

    <section class="recent-posts">
        <h2>&RightTeeArrow; Recent Posts</h2>
        <ul class="post-list">
            {%- for post in collections.posts | reverse -%}
                <li>
                    <time>{{ post.date | readableDate }}</time>
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </li>
            {%- endfor -%}
        </ul>
        <a href="/posts/" class="more-link">view all posts &rarr;</a>
    </section>
    <section class="recent-photos">
        <h2> &percnt; open &dollar;((&dollar;RANDOM &percnt; &dollar;#PHOTOS[@]}))</h2>
        <div class="photo-main">
            <a href="#" id="random-photo-link" class="photo-main"> <img id="random-photo-img" src="" alt="Random photo"
                                                                        loading="lazy"> </a>
        </div>
        <a href="/photos/" class="more-link">view all photos &rarr;</a>
    </section>
</div>

<script>
    (function () {
        const photos = [
            {%- for photo in collections.photos -%}
                {
                    url: "{{ photo.url }}",
                    image: "{{ photo.data.image }}",
                    date: "{{ photo.data.date | readableDate }}"
                }{% if not loop.last %},{% endif %}
            {%- endfor -%}
        ];

        const randomPhoto = photos[Math.floor(Math.random() * photos.length)];
        document.getElementById('random-photo-link').href = randomPhoto.url;
        document.getElementById('random-photo-img').src = randomPhoto.image;
        document.getElementById('random-photo-img').alt = 'Photo from ' + randomPhoto.date;
    })();
</script>
