---
layout: base.njk
---
<article class="photo-post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <time datetime="{{ date }}">{{ date | readableDate }}</time>
    <p class="location">{{ location }}</p>
  </header>

  <figure class="photo-main">
    <img src="{{ image }}" alt="{{ title }}" loading="lazy">
    {% if caption %}
    <figcaption>{{ caption }}</figcaption>
    {% endif %}
  </figure>

  <div class="photo-meta">
    {% if camera %}<p><span class="meta-label">camera:</span> {{ camera }}</p>{% endif %}
    {% if lens %}<p><span class="meta-label">lens:</span> {{ lens }}</p>{% endif %}
    {% if settings %}<p><span class="meta-label">settings:</span> {{ settings }}</p>{% endif %}
  </div>

  {% if content %}
  <div class="post-content">
    {{ content | safe }}
  </div>
  {% endif %}
</article>